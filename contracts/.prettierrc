{
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true, 
    "singleQuote": false,
    "quoteProps": "as-needed",
    "trailingComma": "es5", 
    "bracketSpacing": true,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "endOfLine": "lf",
    "plugins": ["prettier-plugin-solidity"],
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "parser": "solidity-parse",
                "printWidth": 80,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": true,
                "explicitTypes": "always"
            }
        }
    ]
}
