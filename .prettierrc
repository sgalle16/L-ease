{
    "semi": false,
    "singleQuote": false,
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 80,
    "plugins": ["prettier-plugin-solidity"],
    "trailingComma": "es5",
    "overrides": [
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": "*.sol",
            "options": {
                "parser": "solidity-parse",
                "printWidth": 80,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": true,
                "explicitTypes": "always"
            }
        }
    ]
}
